{
  "name": "figma-server",
  "version": "1.0.0",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --detectOpenHandles",
    "test:ci": "jest --ci --coverage",
    "test:legacy": "node --loader ts-node/esm tests/unit/server.test.mts",
    "test:integration:legacy": "node --loader ts-node/esm tests/integration/design-flow.test.mts",
    "test:all:legacy": "npm run test:legacy && npm run test:integration:legacy",
    "test:plugin-connection": "node --loader ts-node/esm tests/plugin-connection-test.mts",
    "test:plugin-connection-js": "node tests/plugin-connection-test.js",
    "test:integration-js": "node tests/integration/design-flow-test.js",
    "test:plugin-bridge": "node --loader ts-node/esm tests/plugin-bridge-connection.test.ts",
    "test:switch-mode": "npx ts-node --esm tests/switch-mode-test.ts",
    "test:index-switch-mode": "npx ts-node --esm tests/index-switch-mode-test.ts",
    "test:switch-mode:jest": "jest tests/switch-to-write-mode.test.ts",
    "test:index-switch-mode:jest": "jest tests/index-switch-mode.test.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "axios": "^1.7.9",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
